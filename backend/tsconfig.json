{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "type-extensions"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "asset-gen/**/*",
    "sample-data/**/*",
    "types/**/*",
    "utils/**/*",
    "type-extensions/**/*"
  ],
  "lib": ["ES2022", "ES2022.error"]
}
