{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {},
    "typeRoots": [
      "./node_modules/@types",
      "type-extensions"
    ],
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "asset-gen/**/*",
    "sample-data/**/*",
    "type-extensions/**/*"
  ],
  "lib": [
    "ES2022",
    "ES2022.error"
  ],
}